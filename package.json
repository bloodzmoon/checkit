{
  "name": "checkit",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.19.12",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/react-icons": "^3.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-test-renderer": "^17.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "prettier": "^2.2.1",
    "react-app-rewired": "^2.1.8",
    "react-test-renderer": "^17.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "cross-env CI=true react-scripts test --env=jsdom",
    "lint": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\""
  },
  "jest": {
    "moduleNameMapper": {
      "^@components(.*)$": [
        "<rootDir>/src/components/index.ts$1"
      ],
      "^@pages(.*)$": [
        "<rootDir>/src/pages/index.ts$1"
      ],
      "^@utils(.*)$": [
        "<rootDir>/src/utils/index.ts$1"
      ],
      "^@lib(.*)$": [
        "<rootDir>/src/lib/index.ts$1"
      ],
      "^@hooks(.*)$": [
        "<rootDir>/src/hooks/index.ts$1"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
